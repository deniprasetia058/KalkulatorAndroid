<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus_x550z.myapplication.MainActivity">

    <!--decimal-->

    <TextView
        android:id="@+id/txtdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decimal"/>

    <EditText
        android:id="@+id/decimal"
        android:layout_below="@id/txtdec"
        android:layout_width="180dp"
        android:layout_height="40dp" />

    <!--binary-->
    <TextView
        android:id="@+id/txtbinary"
        android:layout_marginLeft="260dp"
        android:layout_toRightOf="@id/txtdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Binary"/>

    <TextView
        android:id="@+id/binary"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/txtbinary"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text=""/>

    <!--heksa-->

    <TextView
        android:id="@+id/txtheksa"
        android:layout_marginTop="10dp"
        android:layout_below="@id/decimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heksa"/>

    <TextView
        android:id="@+id/heksa"
        android:layout_below="@id/txtheksa"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text=""/>

    <!--octa-->

    <TextView
        android:id="@+id/txtocta"
        android:layout_marginTop="10dp"
        android:layout_below="@id/decimal"
        android:layout_marginLeft="280dp"
        android:layout_toRightOf="@id/txtheksa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Octa"/>

    <TextView
        android:id="@+id/octa"
        android:layout_marginLeft="180dp"
        android:layout_below="@id/txtheksa"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text=""/>

    <RelativeLayout
        android:layout_below="@id/heksa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="3">

            <Button
                android:id="@+id/Btn1_id"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn1Clicked"
                android:text="1" />

            <Button
                android:id="@+id/Btn2_id"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn2Clicked"
                android:text="2" />

            <Button
                android:id="@+id/Btn3_id"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn3Clicked"
                android:text="3" />

            <Button
                android:id="@+id/Btn4_id"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn4Clicked"
                android:text="4" />

            <Button
                android:id="@+id/Btn5_id"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn5Clicked"
                android:text="5" />

            <Button
                android:id="@+id/Btn6_id"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn6Clicked"
                android:text="6" />

            <Button
                android:id="@+id/Btn7_id"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn7Clicked"
                android:text="7" />

            <Button
                android:id="@+id/Btn8_id"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn8Clicked"
                android:text="8" />
            <Button
                android:id="@+id/Btn9_id"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn9Clicked"
                android:text="9" />
            <Button
                android:id="@+id/Btn0_id"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:onClick="btn0Clicked"
                android:text="0" />

        </GridLayout>

        <Button
            android:id="@+id/Btnclear_id"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="140dp"
            android:layout_width="213dp"
            android:layout_height="60dp"
            android:onClick="btnclearClicked"
            android:text="Clear" />

        <!--<Button-->
            <!--android:id="@+id/Btnhasil_id"-->
            <!--android:layout_marginTop="180dp"-->
            <!--android:layout_width="400dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:onClick="samadenganClicked"-->
            <!--android:text="=" />-->
    </RelativeLayout>
</RelativeLayout>
